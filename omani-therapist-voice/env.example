# Backend Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=sqlite:///./therapist.db
DATABASE_ECHO=false

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI/ML Model Configuration
MODEL_PATH=./models/
EMOTION_MODEL_PATH=./models/emotion_detection.pkl
CRISIS_MODEL_PATH=./models/crisis_detection.pkl

# API Keys (Optional - for external services)
OPENAI_API_KEY=
GOOGLE_CLOUD_API_KEY=
AZURE_SPEECH_KEY=
AZURE_SPEECH_REGION=

# Voice Processing
VOICE_SAMPLE_RATE=16000
VOICE_CHANNELS=1
VOICE_FORMAT=pcm

# WebSocket Configuration
WEBSOCKET_PING_INTERVAL=20
WEBSOCKET_PING_TIMEOUT=20
WEBSOCKET_MAX_CONNECTIONS=100

# Session Management
SESSION_TIMEOUT=3600
MAX_SESSION_DURATION=7200
SESSION_CLEANUP_INTERVAL=300

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/therapist.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_ENABLED=true

# File Storage
UPLOAD_DIR=./uploads/
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=wav,mp3,ogg,flac

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM=

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_PASSWORD=

# External Services
CRISIS_HOTLINE_NUMBER=988
EMERGENCY_CONTACT_ENABLED=true

# Feature Flags
ENABLE_VOICE_PROCESSING=true
ENABLE_EMOTION_ANALYSIS=true
ENABLE_CRISIS_DETECTION=true
ENABLE_CBT_TOOLS=true
ENABLE_SESSION_RECORDING=false

# Performance
WORKER_PROCESSES=4
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30

# Development Settings
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOW_CREDENTIALS=true 